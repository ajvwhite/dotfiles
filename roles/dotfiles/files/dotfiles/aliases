# alias env

# Unbreak broken, non-colored terminal
alias ls='ls -G'
alias ll='ls -lG'

#common stuff
alias vi="vim -X"
alias vim="vim -X"
alias ll="ls -al"
alias du="du -kh"
alias ..="cd ..;"
alias ...="cd ..;"
alias h="history"
alias traceroute="traceroute -I"
alias who="who -HT"
alias mkdir="mkdir -p"
alias path="echo -e ${PATH//:/\\n}"
